  				</settings.content.flexslider.pauseOnHover>

  		    <!-- Slider Animation -->
			<settings.content.flexslider.animation>
				<TCEforms>
		        <displayCond>
		            <AND>
		                <numIndex>FIELD:switchableControllerActions:=:,Contentslider->flexslider</numIndex>
		                <AND>
		                <numIndex>FIELD:settings.content.flexslider.style:=:1,2,3</numIndex>

      				<config>
      					<type>input</type>
      					<size>6</size>
  						<eval>int,nospace</eval>
  						<placeholder>900</placeholder>
  						<mode>useOrOverridePlaceholder</mode>
      				</config>
      			</TCEforms>
      		</settings.content.flexslider.width>

  		    <!-- Slider Height -->
      		<settings.content.flexslider.height>

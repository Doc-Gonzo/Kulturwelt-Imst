								<numIndex index="1">5</numIndex>
							</numIndex>
						</items>
					</config>
				</TCEforms>
			</settings.content.flexslider.style>

  		    <!-- Captions -->
			<settings.content.flexslider.captions>
				<TCEforms>
			        <displayCond>
			            <AND>
			                <numIndex>FIELD:switchableControllerActions:=:,Contentslider->flexslider</numIndex>
			                <AND>
			                <numIndex>FIELD:settings.content.flexslider.style:=:1,2,3,5</numIndex>
			                </AND>
			            </AND>
			        </displayCond>
  					<label>LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.captions</label>
					<config>
                        <type>select</type>
						<size>1</size>
						<maxitems>1</maxitems>
						<default>1</default>
						<items type="array">
							<numIndex index="0" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.captions.I.0</numIndex>
								<numIndex index="1">0</numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.captions.I.1</numIndex>
								<numIndex index="1">1</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.captions.I.2</numIndex>
								<numIndex index="1">2</numIndex>

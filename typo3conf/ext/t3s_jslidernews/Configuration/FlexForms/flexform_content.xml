						<type>select</type>
						<size>1</size>
						<maxitems>1</maxitems>
						<items type="array">
							<numIndex index="0" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.style.II.0</numIndex>
								<numIndex index="1">1</numIndex>
							</numIndex>
							<numIndex index="1" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.style.II.1</numIndex>
								<numIndex index="1">2</numIndex>
							</numIndex>
							<numIndex index="2" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.style.II.2</numIndex>
								<numIndex index="1">3</numIndex>
							</numIndex>
							<numIndex index="3" type="array">
								<numIndex index="0">LLL:EXT:t3s_jslidernews/Resources/Private/Language/locallang.xlf:flexform.style.II.3</numIndex>
